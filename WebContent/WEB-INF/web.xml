<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>JavaWebTestApp</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<!-- HelloWorld -->
	<servlet>
		<servlet-name>Example</servlet-name>
		<servlet-class>me.halin.HelloWorld</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Example</servlet-name>
		<url-pattern>/Hello</url-pattern>
	</servlet-mapping>

	<!-- 测试用重定向 -->
	<servlet>
		<servlet-name>TestRedirect</servlet-name>
		<servlet-class>me.halin.testserver.RedirectTestHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestRedirect</servlet-name>
		<url-pattern>/test/redirect</url-pattern>
	</servlet-mapping>

	<!-- 模拟注册 -->
	<servlet>
		<servlet-name>SignUp</servlet-name>
		<servlet-class>me.halin.SignUpDemoHttpServlet</servlet-class>
		<init-param>
			<param-name>SIGN_UP_DEMO_PREFIX</param-name>
			<param-value>Hello</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUp</servlet-name>
		<url-pattern>/SignUp</url-pattern>
	</servlet-mapping>

	<!-- 模拟服务不可用 -->
	<servlet>
		<servlet-name>ServiceUnavailable</servlet-name>
		<servlet-class>me.halin.ServiceUnavailableHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServiceUnavailable</servlet-name>
		<url-pattern>/ServiceUnavailable</url-pattern>
	</servlet-mapping>

	<!-- 页面访问计数 -->
	<servlet>
		<servlet-name>PageVisitCounter</servlet-name>
		<servlet-class>me.halin.PageVisitCounterHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PageVisitCounter</servlet-name>
		<url-pattern>/pagevisitcounter</url-pattern>
	</servlet-mapping>

	<!-- 请求转发 -->
	<servlet>
		<servlet-name>RequestDispatcher</servlet-name>
		<servlet-class>me.halin.RequestDispatcherHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RequestDispatcher</servlet-name>
		<url-pattern>/requestdispatcher</url-pattern>
	</servlet-mapping>

	<!-- 多语言支持 英语 -->
	<servlet>
		<servlet-name>MultiLanguageSupport_EN</servlet-name>
		<servlet-class>me.halin.MultiLanguageSupportHttpServlet</servlet-class>
		<init-param>
			<param-name>Language</param-name>
			<param-value>English</param-value>
		</init-param>
	</servlet>

	<!-- 多语言支持 中文 -->
	<servlet>
		<servlet-name>MultiLanguageSupport_CN</servlet-name>
		<servlet-class>me.halin.MultiLanguageSupportHttpServlet</servlet-class>
		<init-param>
			<param-name>Language</param-name>
			<param-value>Chinese</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>MultiLanguageSupport_CN</servlet-name>
		<url-pattern>/cn/multilanguage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MultiLanguageSupport_EN</servlet-name>
		<url-pattern>/en/multilanguage</url-pattern>
	</servlet-mapping>


	<!-- JDBC使用入门 -->
	<servlet>
		<servlet-name>JDBCDemo</servlet-name>
		<servlet-class>me.halin.jdbcstudy.JDBCDemoHttpServlet</servlet-class>
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:mysql://localhost:3306</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value>root</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>123456</param-value>
		</init-param>
		<init-param>
			<param-name>driverClass</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>
		</init-param>
		<init-param>
			<param-name>tableName</param-name>
			<param-value>tempTable</param-value>
		</init-param>
		<init-param>
			<param-name>databaseName</param-name>
			<param-value>tempDatabase</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>JDBCDemo</servlet-name>
		<url-pattern>/JDBC/JDBCDemo</url-pattern>
	</servlet-mapping>


