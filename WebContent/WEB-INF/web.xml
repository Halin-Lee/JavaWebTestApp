		</init-param>
		<init-param>
			<param-name>databaseName</param-name>
			<param-value>tempDatabase</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>JDBCMetadataDemo</servlet-name>
		<url-pattern>/JDBC/JDBCMetadataDemo</url-pattern>
	</servlet-mapping>
</web-app>