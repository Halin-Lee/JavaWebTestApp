	<servlet-mapping>
		<servlet-name>JDBCCallableStatementDemo</servlet-name>
		<url-pattern>/JDBC/JDBCCallableStatementDemo</url-pattern>
	</servlet-mapping>

	<!-- JDBC metadata -->
	<servlet>
		<servlet-name>JDBCMetadataDemo</servlet-name>
		<servlet-class>me.halin.jdbcstudy.JDBCMetadataHttpServlet</servlet-class>
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:mysql://localhost:3306</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value>root</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>123456</param-value>
		</init-param>
		<init-param>
			<param-name>driverClass</param-name>
