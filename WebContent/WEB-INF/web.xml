		</init-param>
		<init-param>
			<param-name>databaseName</param-name>
			<param-value>tempDatabase</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>JDBCPrepareStatementDemo</servlet-name>
		<url-pattern>/JDBC/JDBCPrepareStatementDemo</url-pattern>
	</servlet-mapping>


	<!-- JDBC CallableStatement -->
	<servlet>
		<servlet-name>JDBCCallableStatementDemo</servlet-name>
		<servlet-class>me.halin.jdbcstudy.JDBCCallableStatementHttpServlet</servlet-class>
		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:mysql://localhost:3306</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value>root</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>123456</param-value>
		</init-param>
		<init-param>
			<param-name>driverClass</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>
		</init-param>
		<init-param>
			<param-name>tableName</param-name>
